      a(href="http://nekkutu.xyz/?server=3")
        img(src="/img/kkutu/iceland.png" alt="Iceland Image")
      a(href="http://nekkutu.xyz/?server=4")
        img(src="/img/kkutu/finland.png" alt="Finland Image")

